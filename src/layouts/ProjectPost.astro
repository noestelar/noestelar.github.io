---
import Layout from "../layouts/Layout.astro";
import Body from "../components/Body.astro";
import Content from "../components/Content.astro";
import { IoLogoGithub, IoChevronBackOutline } from "react-icons/io5";
import {
  getLangFromUrl,
  getRelativeLocaleUrl,
  useTranslations,
} from "../i18n/utils";
import Footer from "./footer.astro";
import { Image } from "astro:assets";

// Use import.meta.glob to find all potential thumbnail images
const allThumbnailsGlob = import.meta.glob('../assets/**/*.{jpeg,jpg,png,webp,gif,svg,avif}');

export interface Props {
  content: {
    title: string;
    description: string;
    thumbnail?: string;
    githubLink: string;
    website?: string;
    platform: string;
    stack: string;
  };
  body?: string;
}

const {
  content: {
    title,
    description,
    thumbnail,
    githubLink,
    website,
    platform,
    stack,
  },
  body,
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

let resolvedThumbnail: any;

// Determine the image path to use
let imagePath = thumbnail;

if (!imagePath && body) {
  // Try to find first image in markdown
  const match = body.match(/!\[.*?\]\((.*?)\)/);
  if (match && match[1]) {
    imagePath = match[1];
  }
}

// Fallback if still no image
if (!imagePath) {
    // Default image path relative to assets if available
    // For now, let's assume a default
    imagePath = 'img/favicon.svg'; // Hypothetical default
}

if (imagePath) {
  try {
    let sanitizedPath = imagePath;
    if (sanitizedPath.startsWith('/')) {
      sanitizedPath = sanitizedPath.substring(1);
    }
    // Handle query params if any
    sanitizedPath = sanitizedPath.split('?')[0];

    // Check if it is a remote URL
    if (sanitizedPath.startsWith('http')) {
        resolvedThumbnail = imagePath;
    } else {
        // Local asset resolution
        // The glob is relative to this file's directory: src/layouts/
        // So ../assets/ points to src/assets/
        const globKey = `../assets/${sanitizedPath}`;

        if (allThumbnailsGlob[globKey]) {
          const module = await allThumbnailsGlob[globKey]();
          if (typeof module === 'object' && module !== null && 'default' in module) {
            resolvedThumbnail = (module as { default: any }).default;
          }
        } else {
             // Try searching without path prefix if just filename given?
             // For now assume path matches folder structure
             // console.error(`Thumbnail not found in glob: ${globKey}`);
        }
    }
  } catch (error) {
    console.error(`Error processing thumbnail:`, error);
  }
}
---

<!doctype html>
<Layout title={"NoÃ© Rivera - " + title}>
  <Body>
    <main class="pt-[56px]">
      <Content className="pt-6 px-8">
        <span class="">
          <a
            href={getRelativeLocaleUrl(lang, "works")}
            class="text-blue-500 dark:text-cyaned-500 text-md"
          >
            <IoChevronBackOutline className={"inline"} />
            {t("works.button")}
          </a>
        </span>
        <div class="mt-2 mb-8">
          {
            resolvedThumbnail && (
              <Image
                class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                src={resolvedThumbnail}
                alt={title}
                width={720}
                height={360}
                transition:name={`image-${title}`}
              />
            )
          }
        </div>
        <h1 class="my-1 text-3xl font-quicksand">{title}</h1>
        <div>{description}</div>
        <hr class="my-4 border-top border-zinc-400" />

        <ul class="flex flex-col gap-2 my-5 text-sm font-portal">
          <li>
            <span
              class="p-1 bg-green-300 rounded-lg text-cyaned-500 dark:bg-cyaned-900 dark:text-green-300"
              >{t('project.website')}</span
            >
            <a
              class="ml-1 text-blue-500 dark:text-pink-400"
              href={website !== "" ? website : ""}
              target="_blank">{website ? website : "Not available"}</a
            >
          </li>
          <li>
            <span
              class="p-1 bg-green-300 rounded-lg text-cyaned-500 dark:bg-cyaned-900 dark:text-green-300"
              >{t('project.platform')}</span
            >
            <span class="ml-1">{platform}</span>
          </li>
          <li>
            <span
              class="p-1 bg-green-300 rounded-lg text-cyaned-500 dark:bg-cyaned-900 dark:text-green-300"
              >{t('project.stack')}</span
            >
            <span class="ml-1">{stack}</span>
          </li>
        </ul>
        <div>
          <slot />
        </div>

        <ul class="flex flex-row mt-10">
          <li class="inline-block">
            <a
              href={githubLink}
              target="_blank"
              class="px-4 py-2 rounded-lg bg-cyaned-50 dark:text-cyaned-500 text-cyaned-700 font-portal dark:bg-cyaned-900"
            >
              <span style="font-size: 18px;">
                <IoLogoGithub className={"inline"} />
              </span>
              <span class="mx-2"> {t('project.source')}</span>
            </a>
          </li>
        </ul>
      </Content>
    </main>
  </Body>
  <Footer />
</Layout>
